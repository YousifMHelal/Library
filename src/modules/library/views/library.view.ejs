<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/docs.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <title>المكتبة</title>
    <style>
      .form-input {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 800px;
        padding: 30px 15px;
      }
      .form-input * {
        border: none;
        border-bottom: 2px solid var(--main);
      }
      .form-input button:hover {
        border: none;
        border-bottom: 2px solid white;
        background-color: var(--main) !important;
        color: black !important;
        border-radius: 5px;
      }
    </style>
  </head>
  <body class="position-relative">
    <%- include("../../common/views/navbar.view.ejs") %>

    <!-- Add Record Form -->
    <div
      id="addRecordFormId"
      class="form rounded-3 d-flex gap-3 flex-column p-5 bg-dark d-none"
      style="border: 2px solid var(--main); width: 650px"
    >
      <span
        id="closeAddRecordFormButtonId"
        class="text-danger fw-bold fs-4"
        style="position: absolute; top: 5px; right: 20px; cursor: pointer"
        >x</span
      >
      <h3 class="text-center" style="color: var(--main)">اضافة كتاب</h3>
      <div class="d-flex flex-column gap-2 align-items-center">
        <div class="d-flex align-items-center gap-4 w-100">
          <div class="d-flex flex-column gap-1 w-100">
            <label for="bookNameInputId" style="color: var(--secondary)"
              >* الاسم</label
            >
            <input
              id="bookNameInputId"
              type="text"
              placeholder="اسم الكتاب"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            />
          </div>

          <div class="d-flex flex-column gap-1 w-100">
            <label for="bookCategoryInputId" style="color: var(--secondary)"
              >* التصنيف</label
            >
            <input
              id="bookCategoryInputId"
              type="text"
              placeholder="التصنيف"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            />
          </div>
        </div>

        <div class="d-flex align-items-center gap-4 w-100">
          <div class="d-flex flex-column gap-1 w-100">
            <label for="bookStandSelectId" style="color: var(--secondary)"
              >* رقم الاستاند</label
            >
            <select
              id="bookStandSelectId"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            ></select>
          </div>

          <div class="d-flex flex-column gap-1 w-100">
            <label for="bookShelfSelectId" style="color: var(--secondary)"
              >* رقم الرف</label
            >
            <select
              id="bookShelfSelectId"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            ></select>
          </div>
        </div>

        <div class="d-flex align-items-center gap-4 w-100">
          <div class="d-flex flex-column gap-1 w-100">
            <label for="bookSerialInputId" style="color: var(--secondary)"
              >* المسلسل</label
            >
            <input
              id="bookSerialInputId"
              type="text"
              min="0"
              placeholder="مثال: 1 : 8"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            />
          </div>
          <div class="d-flex flex-column gap-1 w-100">
            <label for="bookQtyInputId" style="color: var(--secondary)"
              >* الكمية</label
            >
            <input
              id="bookQtyInputId"
              type="number"
              min="0"
              placeholder="الكمية"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            />
          </div>
        </div>
      </div>

      <button
        id="submitAddButtonId"
        class="py-2 px-4 fw-bold rounded text-dark mx-auto w-75"
        style="background: var(--main); border: 2px solid #000; outline: none"
      >
        اضافة
      </button>
    </div>

    <!-- Updat Record Form -->
    <div
      id="updateRecordFormId"
      class="form rounded-3 d-flex gap-3 flex-column p-5 bg-dark d-none"
      style="border: 2px solid var(--main); width: 650px"
    >
      <span
        id="closeUpdateRecordFormButtonId"
        class="text-danger fw-bold fs-4"
        style="position: absolute; top: 5px; right: 20px; cursor: pointer"
        >x</span
      >
      <h3 class="text-center" style="color: var(--main)">تعديل كتاب</h3>

      <div class="d-flex flex-column gap-2 align-items-center">
        <div class="d-flex aligin-items-center gap-4 w-100">
          <div class="d-flex flex-column gap-1 w-100">
            <label for="updateBookNameInputId" style="color: var(--secondary)"
              >* الاسم</label
            >
            <input
              id="updateBookNameInputId"
              type="text"
              placeholder="اسم الكتاب"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            />
          </div>
      
          <div class="d-flex flex-column gap-1 w-100">
            <label
              for="updateBookCategoryInputId"
              style="color: var(--secondary)"
              >* التصنيف</label
            >
            <input
              id="updateBookCategoryInputId"
              type="text"
              placeholder="التصنيف"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            />
          </div>
        </div>

        <div class="d-flex align-items-center gap-4 w-100">
          <div class="d-flex flex-column gap-1 w-100">
            <label for="updateBookStandSelectId" style="color: var(--secondary)"
              >* رقم الاستاند</label
            >
            <select
              id="updateBookStandSelectId"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            ></select>
          </div>

          <div class="d-flex flex-column gap-1 w-100">
            <label for="updateBookShelfSelectId" style="color: var(--secondary)"
              >* رقم الرف</label
            >
            <select
              id="updateBookShelfSelectId"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            ></select>
          </div>
        </div>

        <div class="d-flex align-items-center gap-4 w-100">
          <div class="d-flex flex-column gap-1 w-100">
            <label for="updateBookSerialInputId" style="color: var(--secondary)"
              >* المسلسل</label
            >
            <input
              id="updateBookSerialInputId"
              type="text"
              min="0"
              placeholder="مثال: 1 : 8"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            />
          </div>
          <div class="d-flex flex-column gap-1 w-100">
            <label for="updateBookQtyInputId" style="color: var(--secondary)"
              >* الكمية</label
            >
            <input
              id="updateBookQtyInputId"
              type="number"
              min="0"
              placeholder="الكمية"
              class="bg-dark text-light rounded py-2 px-3 w-100"
              style="font-size: 16px; outline: none; color: var(--secondary)"
            />
          </div>
        </div>

        <span id="updateBookIdSpanId" class="d-none"></span>
      </div>

      <button
        id="submitUpdateButtonId"
        class="py-2 px-4 fw-bold rounded text-dark mx-auto w-75"
        style="background: var(--main); border: 2px solid #000; outline: none"
      >
        تعديل
      </button>
    </div>

    <main class="text-light d-flex align-items-center gap-5 flex-column">
      <section
        class="container flex-wrap gap-4 align-items-center justify-content-center mb-5"
      >
        <div
          class="w-100 h-100 p-3 rounded"
          style="background: rgb(41 40 40 / 80%)"
        >
          <div
            class="d-flex gap-4 justify-content-center align-items-center p-2 input-container w-100 mb-2"
          >
            <input
              type="search"
              id="searchInputId"
              class="bg-dark text-light rounded py-2 px-3"
              placeholder="ابحث بــ اسم الكتاب او التصنيف"
            />

            <button
              id="addBookButtonId"
              class="rounded px-4 py-1 text-dark border-0 fw-bold"
              style="background: var(--main)"
            >
              أضافة كتاب
            </button>
          </div>

          <div style="max-height: 65vh; overflow-y: scroll; direction: ltr">
            <table
              class="table table-dark table-hover table-rounded d-rtl text-center mb-0"
              style="border: 1px solid #eeeeee7a"
            >
              <thead
                style="color: rgb(13 202 240); position: sticky; top: -1px"
              >
                <tr>
                  <td>اسم الكتاب</td>
                  <td>التصنيف</td>
                  <td>رقم الاستاند</td>
                  <td>رقم الرف</td>
                  <td>المسلسل</td>
                  <td>الكمية</td>
                  <td id="actionTdId">خيارات</td>
                </tr>
              </thead>
              <tbody id="booksTableBodyId"></tbody>
            </table>
          </div>
        </div>
      </section>
    </main>

    <!-- Background overlay -->
    <div id="overlayDivId" class="overlay d-none"></div>

    <script src="/js/axios.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/select.options.js"></script>
    <script src="/library.js"></script>
  </body>
</html>
